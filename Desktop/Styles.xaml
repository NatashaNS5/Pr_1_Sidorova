<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Desktop">

    <!-- Основной цвет приложения -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#F96860"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#F44336"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#FF4BEF12"/>
    <SolidColorBrush x:Key="TextColor" Color="Black"/>

    <!-- Стиль для заголовков -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="0,0,0,60" />
    </Style>

    <!-- Стиль для Label -->
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="Actor"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="5,5,5,3"/>
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>

    <!-- Стиль для TextBox -->
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Height" Value="26" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!-- Стиль для Watermark (TextBlock) -->
    <Style x:Key="WatermarkStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="IsHitTestVisible" Value="False" />
    </Style>

    <!-- Стиль для кнопок -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="317" />
        <Setter Property="Height" Value="37" />
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!-- Стиль для Grid -->
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>

    <!-- Стиль для Аватарки -->
    <Style x:Key="AvaStyle" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Margin" Value="12,12,0,0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- Стиль для кнопки "Отмена" -->
    <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SecondaryColor}" />
    </Style>

    <!-- Стиль для кнопки "Сохранить" -->
    <Style x:Key="CreateButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
    </Style>

    <!-- Стиль для DatePicker -->
    <Style x:Key="DatePickerStyle" TargetType="DatePicker">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Height" Value="30" />
    </Style>

    <!-- Стиль для StackPanel -->
    <Style x:Key="StackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="20,50,20,20" />
    </Style>

    <!-- Стиль для ListBox -->
    <Style x:Key="ListBoxStyle" TargetType="ListBox">
        <Setter Property="Margin" Value="10, 0, 0, 0" />
    </Style>

    <!-- Стиль для Border -->
    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>

    <!-- Стили для CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="Circle" Width="16" Height="16" CornerRadius="8" BorderThickness="2" BorderBrush="DarkBlue" Background="Transparent" Margin="0,0,5,0" />
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Circle" Property="Background" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стили для CheckBox в истории -->
    <Style x:Key="CompletedCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="Circle" Width="16" Height="16" CornerRadius="8" BorderThickness="2" BorderBrush="#F96860" Background="#F96860" Margin="0,0,5,0">
                            <TextBlock x:Name="CheckMark" Text="✔️" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Circle" Property="Background" Value="#F96860"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
