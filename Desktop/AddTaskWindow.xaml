<Window x:Class="Desktop.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
         Title="Создание задачи" Height="600" Width="800" MinHeight="600" MinWidth="800" WindowStartupLocation="CenterScreen" Background="#FFEAEAEA">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{StaticResource GridStyle}">
        <Label Content="Создание задачи" Style="{StaticResource HeaderLabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,60" />
        <StackPanel Style="{StaticResource StackPanelStyle}" Margin="20,25,20,28">
            <Label Content="Название" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="-508,20,0,0" />
            <TextBox Name="NameTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center" Width="602">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Content="Категория" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-501,20,0,0" />
            <TextBox Name="CategoryTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center" Width="602">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Описание" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-505,20,0,0" />
            <TextBox Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}" Height="42" AcceptsReturn="True" Width="602" HorizontalAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Дата" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-550,20,0,0" />
            <DatePicker x:Name="DatePicker" Style="{StaticResource DatePickerStyle}" Height="24" HorizontalAlignment="Center" Width="602" />
            <Label Content="Время" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-540,20,0,0" />
            <TextBox Name="TimeTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center" Width="602">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-480">
            <Button Content="Создать" Style="{StaticResource CreateButtonStyle}" Click="CreateButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="#FF4BEF12">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Отмена" Style="{StaticResource CancelButtonStyle}" Click="CancelButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>