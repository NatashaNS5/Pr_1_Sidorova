<Window x:Class="Desktop.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Создание задачи" Height="600" Width="800" MinHeight="600" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#EAEAEA">
        <Label Content="Создание задачи" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="0,10,0,0" />
        <StackPanel Margin="20,50,20,20" VerticalAlignment="Top">
            <Label Content="Название" FontSize="14" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10" FontSize="14" Padding="10" />

            <Label Content="Категория" FontSize="14" />
            <TextBox Name="CategoryTextBox" Margin="0,0,0,10" FontSize="14" Padding="10" />

            <Label Content="Описание" FontSize="14" />
            <TextBox Name="DescriptionTextBox" Margin="0,0,0,10" FontSize="14" Padding="10" Height="80" AcceptsReturn="True" TextWrapping="Wrap" />

            <Label Content="Дата" FontSize="14" />
            <DatePicker Name="DatePicker" Margin="0,0,0,10" />

            <Label Content="Время" FontSize="14" />
            <TextBox Name="TimeTextBox" Margin="0,0,0,20" FontSize="14" Padding="10" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Создать" Width="224" Background="#4CAF50" Foreground="White" Click="CreateButton_Click" Margin="10,0,0,0" Height="33">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Отмена" Width="224" Background="#F44336" Foreground="White" Click="CancelButton_Click" Margin="10,0,0,0" Height="33">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10,10,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>