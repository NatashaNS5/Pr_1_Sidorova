<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
       Title="MainWindow" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*" />
            <ColumnDefinition Width="61*" />
            <ColumnDefinition Width="260*" />
        </Grid.ColumnDefinitions>

        <Image HorizontalAlignment="Left" Height="150" Margin="67,-320,0,0" VerticalAlignment="Center" Width="150" Source="/logo.png" Grid.ColumnSpan="2" />

        <WrapPanel Margin="120,0,0,0" Orientation="Vertical" VerticalAlignment="Center" Grid.Column="2" Height="496" HorizontalAlignment="Left" Width="327">

            <Label Content="Добро пожаловать!" Style="{StaticResource HeaderLabelStyle}" />
            <Label Content="Почта" Style="{StaticResource LabelStyle}" />

            <Grid Style="{StaticResource GridStyle}">
                <TextBox x:Name="textBox" Style="{StaticResource TextBoxStyle}" TextChanged="TextBox_TextChanged" />
                <TextBlock x:Name="watermark" Text="Введите почту" Style="{StaticResource WatermarkStyle}" />
            </Grid>

            <Label Content="Пароль" Style="{StaticResource LabelStyle}" />
            <Grid Style="{StaticResource GridStyle}">
                <TextBox x:Name="textBox1" Style="{StaticResource TextBoxStyle}" TextChanged="TextBox_TextChanged1" />
                <TextBlock x:Name="watermark1" Text="Введите пароль" Style="{StaticResource WatermarkStyle}" />
            </Grid>

            <Label Content="Восстановить пароль" HorizontalAlignment="Right" Style="{StaticResource LabelStyle}" />
            <Button x:Name="button1" Content="Войти" Click="Button_Click_1" Style="{StaticResource ButtonStyle}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10,10,3,3"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="button2" Content="Регистрация" Click="Button_Click" Style="{StaticResource ButtonStyle}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3,3,10,10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </WrapPanel>
    </Grid>
</Window>